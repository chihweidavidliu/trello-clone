{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "yarn docker:up && yarn migrate-deploy:test && dotenv -e .env.test -- jest -i --detectOpenHandles",
    "tsc": "rm -rf ./build && tsc",
    "dev": "dotenv -e .env -- ts-node-dev ./src/index.ts",
    "build": "tsc",
    "start": "dotenv -e .env -- node ./build/index.js",
    "check-types": "tsc --noEmit",
    "seed": "dotenv -e .env -- prisma db seed",
    "seed:test": "dotenv -e .env.test -- prisma db seed",
    "migrate-dev": "dotenv -e .env -- npx prisma migrate dev",
    "migrate-deploy": "dotenv -e .env -- npx prisma migrate deploy",
    "migrate-deploy:test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma",
    "seed": "ts-node-dev -r dotenv/config ./src/prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.1.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "shared-utils": "^1.0.0",
    "uuid": "^9.0.0",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "dotenv-cli": "^7.2.1",
    "jest": "^29.6.2",
    "prisma": "^5.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  }
}
